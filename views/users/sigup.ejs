<% layout("/layouts/boilerplate") %>


<div class="row mt-3">
    <h2 class="col-6 offset-3">SignUp on WanderHub</h2>
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" placeholder="Enter Username" class="form-control"  id="username" required>
                <div class="invalid-feedback">required</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" placeholder="Enter Email" class="form-control"  id="email" required>
                <div class="invalid-feedback">required</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" placeholder="Enter Password" class="form-control"  id="password" required>
                <div class="invalid-feedback">required</div>
                <button class="btn btn-success mt-3">Signup</button>
            </div>
        </form>
    </div>
</div>